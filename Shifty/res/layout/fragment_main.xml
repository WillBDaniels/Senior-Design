<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ddrc_maroon"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csci.shifty.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tf_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/btn_gray" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="50dp"
             >
        </View>

        <EditText
            android:id="@+id/tf_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_password_hint"
            android:inputType="textPassword"
            android:textColor='@color/btn_gray'
            android:textColorHint="@color/btn_gray" >
        </EditText>

        <RelativeLayout
            android:id="@+id/btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp" >
            </View>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@color/btn_gray"
                android:text="@string/btn_login_text"
                android:onClick="check_and_login" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>